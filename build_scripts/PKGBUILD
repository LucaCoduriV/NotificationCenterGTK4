pkgname=notiflut
pkgver=0.1.3
pkgrel=1
pkgdesc="A simple notificaion daemon with a GTK panel for checking previous notifications like other DEs"
_pkgfoldername=Notiflut-Land
url="https://github.com/LucaCoduriV/$_pkgfoldername"
arch=(
    'x86_64'
    'aarch64' # ARM v8 64-bit
    'armv7h'  # ARM v7 hardfloat
)
license=('Apache-2.0')
depends=("gtk3" "gtk-layer-shell" "dbus" "glib2" "gobject-introspection" "libgee" "json-glib" "libhandy" "libpulse" )
conflicts=("notiflut" "notiflut-client")
provides=("notiflut" "notiflut-client")
makedepends=('flutter' 'clang' 'cmake' 'ninja' 'gtk3' 'pkgconf' 'xz' 'rust')
source=("${_pkgfoldername}-${pkgver}.tar.gz::${url}/archive/v${pkgver}.tar.gz")
sha256sums=('d9f46d1c061bb305ed7ac2edd88b44a9b34b8dbf1cd58ede315c4e400868a191')

build() {
    cd "$srcdir/$_pkgfoldername-$pkgver/notiflut_daemon"
    flutter_rust_bridge_codegen --rust-input native/src/api.rs --dart-output lib/src/native/bridge_generated.dart --dart-decl-output lib/src/native/bridge_definitions.dart
    flutter build linux --release

    cd "$srcdir/$_pkgfoldername-$pkgver/notiflut_ctl"
    cargo build --release
}

package() {
	install -dm 755 "${pkgdir}/opt/${pkgname}"
  cp -a "$_pkgfoldername-$pkgver/notiflut_daemon/build/linux/x64/release/bundle/." -t "${pkgdir}/opt/${pkgname}"

  install -d "$pkgdir/usr/bin/"
  ln -s /opt/${pkgname}/notiflut_land ${pkgdir}/usr/bin/notiflut_land

  #install service
  mv $_pkgfoldername-$pkgver/notiflut_daemon/notiflut.systemd.service $_pkgfoldername-$pkgver/notiflut_daemon/notiflut.service
  install -Dm 644 $_pkgfoldername-$pkgver/notiflut_daemon/notiflut.service -t ${pkgdir}/etc/systemd/user/
  install -Dm 644 $_pkgfoldername-$pkgver/notiflut_daemon/org.lucacoduriv.notiflut.service -t ${pkgdir}/usr/share/dbus-1/services/

  #install ctl (TODO CHECK PERMISSION)
	install -dm 777 "$_pkgfoldername-$pkgver/notiflut_ctl/target/release/notiflut_ctl" -t "${pkgdir}/usr/bin/"
}
